<p id="notice"><%= notice %></p>

<h1>Пости</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th width="20%">Заголовок</th>
      <th>Текст</th>
      <th width="20%" colspan="3">Дії</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= link_to 'Перегляд', post %></td>
        <td><%= link_to 'Редагувати', edit_post_path(post) %></td>
        <td><%= link_to 'Видалити', post, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

  <a type="button" class="btn btn-default" href="<%= new_post_path %>">Створити пост</a>